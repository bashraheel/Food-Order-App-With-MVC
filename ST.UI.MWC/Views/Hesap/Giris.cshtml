@model LoginViewModel
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/_LayoutPage.cshtml";
    ViewBag.ContainerClass = "contact-page";
}

@*Bu container aynısı gibi olacağı için direk kayit tan aldık ve düzenlemelerimizi yaptık*@
<div class="container">
    <div class="row">
        <div class="widget">
            <div class="widget-body">
                <span class="text text-danger">@Html.ValidationSummary()</span>
                @*Bunlar Hesap içinde kayıt cshtml i olarak çalışsın*@  @*Bu alttaki div class row ları da registration dan aldık.*@

                @using (Html.BeginForm("Giris", "Hesap", FormMethod.Post))
                {
                    @Html.AntiForgeryToken() //controller ın içinde kayıt ol class ının üstüne validationforgery falan yazmıştık. İşte o yüzden bunu buraya yazmamız gerekiyor.
                                            <div class="row">
                                                <div class="form-group col-sm-6">
                                                    @Html.LabelFor(x => x.NameEmail)
                                                    @Html.TextBoxFor(x => x.NameEmail, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(x => x.NameEmail)
                                                </div>
                                               
                                                <div class="form-group col-sm-6">
                                                    @Html.LabelFor(x => x.Password)
                                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
                                                    @Html.ValidationMessageFor(x => x.Password)
                                                </div>
                                               
                                                <div class="form-group col-sm-6">
                                                    @Html.LabelFor(x => x.RememberMe)
                                                    @Html.CheckBoxFor(x => x.RememberMe)
                                                  

                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <p> <input type="submit" class="btn theme-btn" value="Giriş Yap" /> </p>
                                                </div>
                                            </div>

                }


            </div>

        </div>
    </div>
</div>

